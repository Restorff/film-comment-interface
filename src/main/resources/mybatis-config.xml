        <!--&lt;!&ndash;-->
          <!--name：是包名， 这个包中的所有mapper.xml一次都能加载-->
        <!--&ndash;&gt;-->
        <!--<package name="cn.lstf666.filmcomment.mapper.xml"/>-->
    <!--</mappers>-->
</configuration>
